{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "rootDir": "./src",
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
